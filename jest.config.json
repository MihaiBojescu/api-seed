{
  "displayName": "unit",
  "roots": [
    "<rootDir>/src"
  ],
  "testMatch": [
    "**/*.test.ts"
  ],
  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  },
  "setupFiles": [
    "jest-date-mock"
  ],
  "reporters": [
    "default",
    [
      "jest-html-reporters",
      {
        "publicPath": ".reports",
        "filename": "index.html",
        "expand": true,
        "theme": "darkTheme"
      }
    ]
  ]
}
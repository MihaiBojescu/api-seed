{
  "coverageDirectory": "<rootDir>/reports/coverage",
  "coverageReporters": [
    "lcov"
  ],
  "maxWorkers": "50%",
  "modulePaths": [
    "<rootDir>/src/"
  ],
  "moduleNameMapper": {
    "^@tests/(.*)$": "<rootDir>/tests/$1"
  },
  "preset": "ts-jest",
  "reporters": [
    "default",
    [
      "jest-html-reporters",
      {
        "publicPath": "reports",
        "filename": "summary.html",
        "expand": true,
        "theme": "darkTheme"
      }
    ]
  ],
  "roots": [
    "<rootDir>"
  ],
  "testMatch": [
    "**/*.test.ts",
    "**/*.steps.ts"
  ]
}
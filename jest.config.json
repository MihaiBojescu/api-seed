{
  "roots": [
    "<rootDir>/src"
  ],
  "maxWorkers": "50%",
  "testMatch": [
    "**/*.test.ts"
  ],
  "preset": "ts-jest",
  "setupFiles": [
    "jest-date-mock"
  ],
  "reporters": [
    "default",
    [
      "jest-html-reporters",
      {
        "publicPath": "reports",
        "filename": "summary.html",
        "expand": true,
        "theme": "darkTheme"
      }
    ]
  ],
  "coverageDirectory": "<rootDir>/reports/coverage",
  "coverageReporters": [
    "lcov"
  ]
}
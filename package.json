{
  "name": "api-seed",
  "version": "0.1.0",
  "description": "API Seed package",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/alexcristea/api-seed.git"
  },
  "scripts": {
    ":clean": "rm -rf .build",
    ":compile": "tsc && cp ./package.json .build/package.json",
    ":install": "cd .build && yarn install --production",
    "dkr:image:build": "docker build -t ${npm_package_name} --file ./infrastructure/containerization/Dockerfile .build",
    "dkr:container:run": "docker container run --publish 8080:8080 --detach --name ${npm_package_name} ${npm_package_name}:latest",
    "dkr:container:remove": "docker rm ${npm_package_name}",
    "check:dpdm": "dpdm ./src/* --tsconfig ./tsconfig.json --exclude ./node_modules",
    "check:type": "tsc --pretty",
    "check:prettier": "prettier --check \"src/**/**.{js,ts}\"",
    "check:lint": "eslint \"src/**/**.{js,ts}\"",
    "test": "jest src",
    "test:e2e": "jest tests",
    "test:coverage": "jest src --coverage",
    "test:watch": "jest src --watchAll",
    "build": "run-s :clean :compile :install",
    "start": "node .build/main/index.js",
    "api:build": "run-s test build",
    "api:start": "run-s test build start",
    "api:watch": "nodemon",
    "docker:build": "run-s test build dkr:image:build",
    "docker:run": "run-s test build dkr:image:build dkr:container:run",
    "docker:rerun": "run-s test build dkr:image:build dkr:container:remove dkr:container:run",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/express": "^4.17.13",
    "@types/faker": "^4.1.9",
    "@types/jest": "^25.1.2",
    "@types/node": "^13.7.1",
    "@types/npm": "^2.0.31",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^8.3.1",
    "@types/yamljs": "^0.2.31",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "dpdm": "^3.10.0",
    "eslint": "^8.20.0",
    "faker": "^4.1.0",
    "husky": "^8.0.0",
    "jest": "^27.0.0",
    "jest-html-reporters": "^1.2.1",
    "jest-mock-extended": "^2.0.7",
    "nodemon": "^2.0.19",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "supertest": "^6.2.4",
    "ts-jest": "^27.0.0",
    "ts-node": "^8.6.2",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^3.7.5"
  },
  "dependencies": {
    "axios": "^0.27.2",
    "dotenv": "^8.2.0",
    "envalid": "^7.3.1",
    "express": "^4.17.1",
    "swagger-ui-express": "^4.5.0",
    "uuid": "^8.3.2",
    "yamljs": "^0.3.0"
  }
}
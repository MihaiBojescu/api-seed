{
  "compilerOptions": {
    "incremental": true,
    "baseUrl": "./src",
    "module": "CommonJS",
    "types": ["node", "jest"],
    "resolveJsonModule": true,
    "pretty": true,
    "strict": true,
    "target": "ES2020",
    "outDir": ".build",
    "declaration": true,
    "alwaysStrict": true,
    "inlineSources": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames":true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types"],
    "lib": ["ES2020"],
    "moduleResolution": "node",
  },
  "include": ["./src/**/*.ts", "./tests/**/*.ts"]
}
